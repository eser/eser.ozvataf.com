{
  "lint": {
    "files": {
      "include": [
        "src/"
      ],
      "exclude": [
        "node_modules/"
      ]
    },
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [],
      "exclude": [
          "no-empty-interface"
      ]
    }
  },
  "fmt": {
    "files": {
      "include": [
        "src/"
      ],
      "exclude": [
        "node_modules/"
      ]
    },
    "options": {
      "useTabs": false,
      "indentWidth": 2,
      "singleQuote": false
    }
  }
}
